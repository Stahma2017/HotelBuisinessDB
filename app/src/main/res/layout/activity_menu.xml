<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">

    <Button
            android:id="@+id/hostelsBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="2dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/horizont1"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#0d47a1"
            android:paddingBottom="24dp"
            android:paddingTop="42dp"
            android:drawableTop="@drawable/ic_hostel"
            android:text="Отели"
            android:textColor="#ffffff"/>

    <Button
            android:id="@+id/employeesBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/horizont1"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#0d47a1"
            android:text="Работники"
            android:textColor="#ffffff"
            android:paddingBottom="24dp"
            android:paddingTop="42dp"
            android:drawableTop="@drawable/ic_employee"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="2dp"/>

    <Button

            android:layout_width="0dp" android:layout_height="0dp" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/horizont2" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="2dp" android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@+id/horizont1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"
            android:background="#0d47a1"
            android:text="Комнаты"
            android:textColor="#ffffff"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="24dp"
            android:drawableTop="@drawable/ic_room"
            android:paddingTop="42dp" android:id="@+id/roomBtn"/>

    <Button android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/horizont2" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="2dp" android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@+id/horizont1"
            android:text="Клиенты"
            android:textColor="#ffffff"
            android:background="#0d47a1"
            android:drawableTop="@drawable/ic_client"
            android:paddingBottom="24dp"
            android:paddingTop="42dp"
            android:id="@+id/clientsBtn"/>

    <Button
            android:id="@+id/ordersBtn"
            android:layout_width="0dp" android:layout_height="0dp" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="2dp" android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@+id/horizont2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"
            android:text="Заказы"
            android:textColor="#ffffff"
            android:background="#0d47a1"
            android:drawableTop="@drawable/ic_order"
            android:paddingBottom="24dp"
            android:paddingTop="42dp"/>

    <Button
            android:id="@+id/paymentBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@+id/horizont2" app:layout_constraintStart_toEndOf="@+id/guideline2"
            android:layout_marginStart="2dp"
            android:background="#0d47a1"
            android:text="Платежи"
            android:textColor="#ffffff"
            android:drawableTop="@drawable/ic_payment"
            android:paddingBottom="24dp"
            android:paddingTop="42dp"/>

    <Button
            android:id="@+id/departmentsBtn"
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@+id/guideline4" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="2dp"
            android:text="Отделы"
            android:textColor="#ffffff"
            android:background="#0d47a1"
            android:drawableTop="@drawable/ic_department"
            android:paddingBottom="24dp"
            android:paddingTop="42dp"/>

    <Button
            android:id="@+id/logoutBtn"
            android:layout_width="0dp" android:layout_height="0dp" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="2dp" android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@+id/guideline4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"
            android:text="Выйти"
            android:textColor="#ffffff"
            android:background="#0d47a1"
            android:drawableTop="@drawable/ic_logout"
            android:paddingBottom="24dp"
            android:paddingTop="42dp"/>


    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/horizont1"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.25"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/horizont2"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.75"/>

</android.support.constraint.ConstraintLayout>